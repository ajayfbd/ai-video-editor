{
  "validation_settings": {
    "check_internal_links": true,
    "check_external_links": false,
    "check_heading_hierarchy": true,
    "check_code_syntax": true,
    "check_content_quality": true,
    "minimum_content_length": 100,
    "severity_levels": {
      "broken_link": "error",
      "heading_hierarchy": "warning",
      "code_syntax": "warning",
      "todo_comment": "info",
      "content_length": "warning",
      "file_error": "error"
    }
  },
  "file_patterns": {
    "include": ["*.md", "*.rst", "*.txt"],
    "exclude_directories": [".git", "node_modules", "__pycache__", ".pytest_cache", "temp", "output"],
    "exclude_files": ["CHANGELOG.md", "LICENSE.md"]
  },
  "documentation_structure": {
    "quick_start": {
      "files": ["quick-start.md", "README.md"],
      "owner": "product_team",
      "maintenance_frequency": "monthly"
    },
    "user_guide": {
      "files": ["docs/user-guide/**/*.md"],
      "owner": "product_team", 
      "maintenance_frequency": "bi-weekly"
    },
    "developer_guide": {
      "files": ["docs/developer/**/*.md", "docs/api/**/*.md"],
      "owner": "engineering_team",
      "maintenance_frequency": "weekly"
    },
    "tutorials": {
      "files": ["docs/tutorials/**/*.md"],
      "owner": "product_engineering_team",
      "maintenance_frequency": "monthly"
    },
    "support": {
      "files": ["docs/support/**/*.md"],
      "owner": "support_team",
      "maintenance_frequency": "as_needed"
    }
  },
  "quality_standards": {
    "max_heading_jump": 1,
    "required_sections": {
      "user_guide": ["Overview", "Installation", "Usage"],
      "developer_guide": ["Overview", "API Reference", "Examples"],
      "tutorials": ["Prerequisites", "Steps", "Next Steps"]
    },
    "link_validation": {
      "check_anchors": true,
      "allow_external": true,
      "timeout_seconds": 10
    }
  },
  "reporting": {
    "output_formats": ["text", "json", "html"],
    "default_format": "text",
    "include_summary": true,
    "group_by_file": true,
    "show_line_numbers": true
  },
  "maintenance_schedule": {
    "daily_checks": ["broken_links", "file_errors"],
    "weekly_checks": ["heading_hierarchy", "code_syntax", "content_quality"],
    "monthly_checks": ["comprehensive_review", "user_journey_testing"],
    "quarterly_checks": ["structure_review", "cross_reference_audit"]
  }
}